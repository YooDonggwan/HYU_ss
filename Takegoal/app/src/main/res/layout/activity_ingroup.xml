<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InGroup">

    <TextView
        android:id="@+id/group_goal"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_above="@+id/group_member"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="158dp"
        android:text="그룹 목표"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/group_member"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_above="@+id/mRecyclerView"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="-255dp"
        android:text="그룹원"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="334dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="258dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/lazy_king"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_below="@+id/mRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupView"
        android:layout_width="409dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/groupButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="18dp"
        android:text="추가" />


</RelativeLayout>
